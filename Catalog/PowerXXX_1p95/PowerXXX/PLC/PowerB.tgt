FUNCTION sysLogWriteMsg : BOOL
	{DE:"Writes a log to LogicLab 'Debug' output pane"}
	VAR_INPUT
		level: UINT;
		msg: STRING;
		info1: DINT;
		info2: DINT;
		info3: DINT;
		info4: DINT;
	END_VAR
	{CODE:EMBEDDED}
END_FUNCTION

FUNCTION sampleEmbeddedFunc : BOOL
	VAR_INPUT
		par1 : INT;
		par2 : REAL;
	END_VAR
	{ CODE:EMBEDDED }
END_FUNCTION
