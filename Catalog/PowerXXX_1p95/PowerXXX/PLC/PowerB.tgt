(*   GLOBAL VARIABLES                                                   *)
(*                                                                      *)
(************************************************************************)

VAR_GLOBAL

	{G:"System Timers"}
	sysTimer 		AT %MD60000.0 	: UDINT;	{ DE:"System timer [ms]"}

	{G:"Input and outputs"}
	sysDigitalInputs		AT %IX0.0	: ARRAY[ 0..9 ] OF BOOL;	{ IO:"System digital inputs" }
	sysDigitalOutputs		AT %QX0.0	: ARRAY[ 0..9 ] OF BOOL;	{ IO:"System digital outputs" }
	sysAnalogInputs			AT %IW1.0	: ARRAY[ 0..2 ] OF UINT;	{ IO:"System analog inputs" }
	
	{G:"User mappings"}
	sysUserDataBlock		AT %MB0.0	: ARRAY[ 0..1023 ] OF USINT;	{ IO:"Data block available for user data mapping"}

END_VAR


